---
import { SITE_TITLE } from '../consts';

const { pathname } = Astro.url;

const navItems = [
  {
    href: 'https://frontend-weekly.ru/',
    label: 'Дайджесты',
    isActive: pathname.startsWith('/digest')
  },
  {
    href: 'https://webpatterns.ru/',
    label: 'Паттерны',
    isActive: false // внешняя ссылка, всегда неактивна
  },
  {
    href: '/support',
    label: 'Поддержи',
    isActive: pathname === '/support' || pathname === '/support/',
    isButton: true
  }
];
---

<header class="header">
  <div class="header__content">
    <div class="header__logo">

      <a href="/" class="logo-link">
        {SITE_TITLE}
      </a>
    </div>
    <nav class="header__nav">
      <ul class="nav-list">
        {navItems.map(item => (
          <li class="nav-item">
            <a href={item.href} class={`nav-link ${item.isActive ? 'nav-link--active' : ''} ${item.isButton ? 'nav-link--button' : ''}`}>
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    padding: var(--space-md);
    border-bottom: 1px solid rgba(var(--gray), 0.15);
  }

  .header__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-md);
    width: min(100%, var(--content-width));
    margin-inline: auto;
  }

  .header__logo {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: var(--text-xl);
  }

  .logo-link {
    color: rgb(var(--black));
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .logo-link:hover {
    color: var(--accent);
  }

  .header__nav {
    width: 100%;
  }

  .nav-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-md);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    display: block;
    padding: var(--space-xs) 0;
    color: rgb(var(--gray-dark));
    text-decoration: none;
    font-size: var(--text-sm);
    font-weight: 500;
    transition: color 0.2s ease;
    position: relative;
  }

  .nav-link:hover {
    color: var(--accent);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--accent);
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link--active {
    color: var(--accent);
  }

  .nav-link--active::after {
    width: 100%;
  }

  .nav-link--button {
    background-color: var(--accent);
    color: white;
    padding: var(--space-xs) var(--space-sm);
    border-radius: 6px;
    font-weight: 600;
    transition: background-color 0.2s ease, transform 0.1s ease;
  }

  .nav-link--button:hover {
    background-color: var(--accent-dark, color-mix(in srgb, var(--accent) 85%, black));
    color: white;
    transform: translateY(-1px);
  }

  .nav-link--button::after {
    display: none;
  }

  .nav-link--button.nav-link--active {
    background-color: var(--accent-dark, color-mix(in srgb, var(--accent) 85%, black));
  }

  @media (min-width: 720px) {
    .header__content {
      flex-direction: row;
    }

    .header__nav {
      width: auto;
    }
  }
</style>
