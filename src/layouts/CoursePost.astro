---
interface Props {
  title: string;
  description: string;
  slug?: string;
  duration?: string;
}

import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description, slug = '', duration } = Astro.props as Props;
---
<html lang="ru">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .home-link {
        display: inline-block;
        margin: var(--space-lg) 0;
        color: rgb(var(--gray));
        text-decoration: none;
        font-size: var(--text-sm);
        transition: color 0.2s ease;
      }

      .home-link:hover {
        color: var(--accent);
      }

      .post__title {
        font-size: var(--text-4xl);
        line-height: 1.1;
        margin: var(--space-3xl) 0 var(--space-lg) 0;
        text-align: center;
      }

      .post__divider {
        height: 1px;
        background: rgba(var(--gray), 0.2);
        margin: var(--space-2xl) auto;
        width: 60%;
        max-width: 400px;
      }

      .content {
        margin: 0 auto;
        max-width: var(--content-width);
      }

      .content :global(h2) {
        margin-top: var(--space-3xl);
        margin-bottom: var(--space-lg);
        font-size: var(--text-3xl);
        position: relative;
      }

      .content :global(h2)::before {
        content: '';
        width: 30px;
        height: 3px;
        background: var(--accent);
        position: absolute;
        top: -10px;
        left: 0;
      }

      .content :global(h3) {
        margin-top: var(--space-2xl);
        margin-bottom: var(--space-md);
        font-size: var(--text-2xl);
      }

      .content :global(p) {
        margin-bottom: var(--space-lg);
        font-size: var(--text-lg);
        line-height: 1.8;
        text-wrap: pretty;
      }

      .content :global(code) {
        font-size: 0.9em;
      }

      .content :global(pre) {
        margin: var(--space-xl) 0;
      }

      .content :global(blockquote) {
        font-size: var(--text-lg);
        line-height: 1.6;
        font-style: italic;
        color: rgb(var(--gray-dark));
        background: rgba(var(--gray-light), 0.5);
        padding: var(--space-lg);
        border-radius: 4px;
        border-left: 4px solid var(--accent);
        margin: var(--space-xl) 0;
      }

      .content :global(blockquote p:last-child) {
        margin-bottom: 0;
      }

      @media (max-width: 720px) {
        .post__title {
          font-size: var(--text-3xl);
        }

        .content :global(h2) {
          font-size: var(--text-2xl);
        }

        .content :global(h3) {
          font-size: var(--text-xl);
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <article class="post">
        <a href="/courses" class="home-link">К курсам</a>
        <h1 class="post__title" transition:name={`title-${slug}`}>{title}</h1>
        {duration && <p class="short-post__date">{duration}</p>}
        <hr class="post__divider" />
        <div class="content">
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
